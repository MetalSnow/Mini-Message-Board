<form action="new" method="post">
  <h2>New Message</h2>
  <label for="author">
    Author Name:
    <input type="text" id="author" name="author" />
  </label>
  <label for="message">
    Message:
    <input type="text" id="message" name="message" />
  </label>
  <button type="submit">Send Message</button>
</form>
